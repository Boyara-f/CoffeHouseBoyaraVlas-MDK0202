<Window x:Class="CoffeHouseBoyaraVlas.Windows.Director.ProductChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeHouseBoyaraVlas.Windows.Director"
        mc:Ignorable="d"
        Title="ProductChangeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TBL_ProductID" Text="1"/>
            <Label Content="Наименование продаваемого юнита продукции кофейни"/>
            <TextBox x:Name="TB_ProdName"/>
            <Label Content="Цена"/>
            <TextBox x:Name="TB_ProdPrice"/>
            <Label Content="Описание"/>
            <TextBox x:Name="TB_ProdDesc"/>
            <Button x:Name="BTN_SelectPhoto" Content="Выбрать фото" Click="BTN_SelectPhoto_Click"/>
            <Button x:Name="BTN_Confirm" Content="Подтвердить" Click="BTN_Confirm_Click"/>
            <Image x:Name="I_Photo"/>
        </StackPanel>
    </Grid>
</Window>
